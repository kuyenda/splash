<header class="navbar navbar-expand-lg navbar-dark bgprimary">
  <a class="navbar-brand" href="/">x<b>Graphics</b></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to '代码块', sketches_path, class: "btn btn-primary btn-hnavbar" %>
      </li>
      <% unless logged_in? %>
        <li class="nav-item">
          <%= link_to '登入', login_path, class: "btn btn-primary btn-hnavbar", data: { toggle:"modal", target:"#loginGroup" } %>
        </li>
        <li class="nav-item">
          <%= link_to "注册", signup_path, class: "btn btn-primary btn-hnavbar", data: { toggle:"modal", target:"#signupGroup" } %>
        </li>
      <% else %>
        <li class="nav-item dropdown">
          <a class="dropdown-toggle btn btn-primary btn-hnavbar" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_user.name %><b class="caret"></b>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "主页", current_user, class: "dropdown-item" %>
            <%= link_to "账号设定", edit_user_path(current_user), class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "登出", logout_path, class: "dropdown-item", method: :delete %>
            <div class="dropdown-divider"></div>
            <% if current_user.name == "kuyenda" %>
              <%= link_to '管理', users_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
    <div class="form-inline my-2 my-lg-0">
      <%= form_for :search, url: "/search", method: "get" do |f| %>
        <%= f.text_field :q, class: "form-control mr-sm-2", placeholder: "输入关键词" %>
        <%= f.submit "搜索", class: "btn btn-dark my-2 my-sm-1" %>
      <% end %>
    </div>
  </div>
</header>