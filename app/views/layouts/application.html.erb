<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/meta' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <main class="content">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>