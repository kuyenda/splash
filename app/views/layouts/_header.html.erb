<header class="navbar">
  <div class="navbar-logo">
    <a href="/">Splash</a>
    <span class="version">0.01-b</span>
  </div>
  <div class="navbar-main">
    <ul class="nav-items">
      <li class="nav-item">
        <%= link_to 'Home', root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Sketch', examples_path, class: "nav-link" %>
      </li>
      <% if logged_in? %>
        <li class="nav-item">
          <%= link_to 'Users', '#', class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
            Account <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user, class: "nav-link dropdown-link" %></li>
            <li><%= link_to "Settings", '#', class: "nav-link dropdown-link" %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "Log out", logout_path, class: "nav-link dropdown-link", method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Login', login_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="navbar-icons">
    <ul class="icons-list">
      <li class="icon-list" id="mobile-menu-btn">
        <a class="icon-link">
          <div class="hamburger">
            <div class="hamburger-box">
              <div class="hamburger-inner"></div>
            </div>
          </div>
        </a>
      </li>
    </ul>
  </div>
  <div class="navbar-mobile" id="mobile-menu">
    <form class="mobile-search-form" action="">
      <i class="icon -md24 ion-md-search"></i>
      <input class="mobile-search-input" type="search" name="q" placeholder="Search " value="">
    </form>
    <ul class="navbar-mobile-main">
      <li>
        <a href="#" class="toggle-mobile-nav-dropdown" data-sub-nav="explore">
          Explore
        </a>
        <ul class="mobile-dropdown-nav">
          <li>
            <%= link_to 'Sketch', examples_path, class: "mobile-link" %>
          </li>
        </ul>
      </li>
      <% if logged_in? %>
        <ul>
          <li>
            <%= link_to "Profile", current_user, class: "mobile-link" %>
          </li>
          <li>
            <%= link_to "Log out", logout_path, class: "mobile-link", method: :delete %>
          </li>
        </ul>
      <% else %>
        <ul>
          <li>
            <%= link_to 'Login', login_path, class: "mobile-link" %>
          </li>
          <li>
            <%= link_to "Sign up", signup_path, class: "mobile-link" %>
          </li>
        </ul>
      <% end %>
    </ul>
  </div>
</header>