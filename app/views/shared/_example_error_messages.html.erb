<% if @example.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-sketch">
      Oops, <%= pluralize(@example.errors.count, "error") %>.
      <ul>
        <% @example.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>