<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-signup">
      Oops, <%= pluralize(@user.errors.count, "Requirement")%>.
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>