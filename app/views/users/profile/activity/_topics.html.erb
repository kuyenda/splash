<div class="tab-pane fade" id="topics">
  <div class="profile-topics row">
    <% if logged_in? %>
      <aside class="col-md-3">
        <h3>话题(<%= @user.topics.count %>)</h3>
        <section class="micropost_form">
          <%= render 'users/profile/post/topic' %>
        </section>
      </aside>
    <% end %>
    <% if @user.topics.any? %>
      <div class="col">
        <table class="table table-sm table-bordered table-hover">
          <thead>
            <tr>
              <th scope="col">主题</th>
              <th scope="col">时间</th>
              <% if current_user?(@user) %>
                <th scope="col">删除</th>
              <% end %>
            </tr>
          </thead>
          <tbody class="table-striped">
            <%= render @topics %>
          </tbody>
        </table>
        <div class="digg_pagination">
          <%= will_paginate @topics %>
        </div>
      </div>
    <% end %>
  </div>
</div>