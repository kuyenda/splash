<tr>
  <th scope="row">
    <%= user.id %>
  </th>
  <td>
    <div class="d-inline avatar32">
      <%= gravatar_for user, size: 32 %>
    </div>
  </td>
  <td>
    <%= link_to user.name, user %>
  </td>
  <td>
    <%= link_to "删除", user, class: "tc link hover-red8", method: :delete, data: { confirm: "You sure?" } %>
  </td>
</tr>