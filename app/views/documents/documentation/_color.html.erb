<h3 class="x header block">$xSkinPelettesApp
</h3>
<table class="table table-bordered table-responsive-sm my-2 no-break" style="width: auto">
  <thead>
    <tr>
      <th scope="col">类</th>
      <th scope="col">主色</th>
      <th scope="col">深色</th>
      <th scope="col">浅色</th>
      <th scope="col">协调色</th>
    </tr>
  </thead>
  <tbody>
    <% ["red","pink","purple","grape","indigo","blue","skyblue","cyan","teal","green","chartreuse","lime","yellow","amber","orange","deeporange"].each do |color| %>
      <tr>
        <td><code class="bgblack0125 primary p-2">bg<%=color%></code></td>
        <td>
          <div class="bg<%=color%> p-2 d-inline-block br1 shadow"></div>
        </td>
        <td>
          <% (1..5).to_a.each do |index| %>
            <div class="bg<%=color%><%=index%> p-2 d-inline-block br1 shadow"></div>
          <% end %>
        </td>
        <td>
          <% (1..5).to_a.each do |index| %>
            <div class="bg<%=color%>0<%=index%> p-2 d-inline-block br1 shadow"></div>
          <% end %>
        </td>
        <td>
          <% (0..1).to_a.each do |index|  %>
            <div class="bg<%=color%>A<%=index%> p-2 d-inline-block br1 shadow"></div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
