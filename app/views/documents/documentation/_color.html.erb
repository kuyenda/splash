<h4 class="x header block">
  $xSkinShades
</h4>
<table class="table table-bordered table-responsive-sm my-2 no-break" style="width: auto">
  <thead>
    <tr>
      <th scope="col">黑</th>
      <th scope="col">类</th>
      <th scope="col">浓度</th>
      <th scope="col">白</th>
      <th scope="col">类</th>
      <th scope="col">浓度</th>
    </tr>
  </thead>
  <tbody>
    <% colors = ["black", "white"] %>
    <% ['','90','80','70','60','50','40','30','20','15','10','05','02','01','025','0125'].each do |index|  %>
      <tr>
        <% colors.each do |color|  %>
          <td class="<%= 'bgdark' if color=='white' %>">
            <div class="bg<%=color%><%=index%> p-2 d-inline-block br1 shadow"></div>
          </td>
          <td><code class="bgblack0125 primary p-2">bg<%=color%><%=index%></code></td>
          <td><code class="bgblack0125 primary p-2"><%=index%><%='100' if index.empty?%></code></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
