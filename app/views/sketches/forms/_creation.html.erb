<%= form_for(creation, html: { class: "" }) do |f| %>
  <%= f.text_field :title, placeholder: "标题", class: "form-control" %>
  <%= f.text_field :description, placeholder: "概要", class: "form-control" %>
  <%= flash_form_error creation, class: 'alert alert-danger' %>
  <%= f.submit "完成", class: "btn btn-primary mt-sm-2" %>
<% end %>