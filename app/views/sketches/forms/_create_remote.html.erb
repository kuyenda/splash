<div class="modal fade" id="sketchCreateGroup" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">新画布</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: sketch, scope: :sketch) do |f| %>
          <div class="form-group">
            <%= f.text_field :title, placeholder: "标题", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_field :description, placeholder: "概要", class: "form-control" %>
          </div>
          <%= f.submit "新建", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>