<% provide(:title, 'Discover') %>
<%= render partial: 'sketches/groups/help_group', object: @sketch %>
<%= render partial: 'sketches/groups/create_group', object: @sketch %>
<section class="sketches-container">
  <aside class="sketches-aside-wrapper">
    <div class="sketches-aside">
      <div class="w-100 mb-sm-2" style="border-bottom: 3px dashed #b0bec5">
        <h5>程式库列表</h5>
        <p>点击<strong>新建</strong>，创建一个新的数据<br>
        </p>
        <a href="#" data-switch="#createGroup" data-by="open", class="d-inline-block">
          <ion-icon name="add-circle-outline" class="icon-48 icon-green"></ion-icon>
        </a>
        <a href="#" data-get="<%= h_url %>?i=1" data-to="#helpGroup" data-toggle="modal" data-target="#helpGroup">
          <ion-icon name="information-circle-outline" class="icon-48 icon-dark"></ion-icon>
        </a>
      </div>
      <div class="w-100">
        <%= render 'sketches/forms/query' %>
      </div>
      <div class="w-100">
        <h6 class="my-1 d-block fw5 gray ffpx"><%= @sketches.count %> Founded</h6>
      </div>
      <div class="w-100 p-5">
        <% debug(@sketches) %>
        <%= chart_for(@sketches) %>
      </div>
    </div>
  </aside>
  <main class="sketches">
    <section class="sketches-stream">
      <% if @sketches.any? %>
        <%= render partial: "sketches/datas/sketch", object: @sketches %>
      <% else %>
        <h1>什么也没找到</h1>
      <% end %>
      <%= will_paginate @sketches, class:'pagination w-100 ml-1 mt-3 ml-md-4 page-info', previous_label: '上页', next_label:'下页' %>
    </section>
  </main>
</section>