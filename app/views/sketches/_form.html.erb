<%= form_for(form) do |f| %>
  <%= f.text_field :title, placeholder: "Title" %>
  <%= f.text_field :description, placeholder: "Description" %>
  <%= flash_form_error form, class: 'alert alert-danger' %>
  <% if form.new_record? %>
    <%= f.submit "Ok" %>
  <% else %>
    <%= f.submit "Save" %>
    <%= link_to "Delete", form, class: "tc d-block link hover-red8", method: :delete, data: { confirm: "You sure?" } %>
  <% end %>
<% end %>